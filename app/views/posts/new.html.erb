<% @post.errors.full_messages.each do |message| %>
    <div class="errors"><%= message %></div>
<% end %>

<h2>New Post</h2>

<%= form_with model: @post do |f| %>
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title, autofocus: true %><br />
    <%= f.text_area :body, size: "60x10" %><br />

    <%= f.submit %>
<% end %>